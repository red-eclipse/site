Options -Indexes

php_value upload_max_filesize 32M
php_value post_max_size 32M

RewriteEngine on
RewriteCond %{HTTPS} !=on
RewriteRule ^/?(.*) https://redeclipse.net/$1 [R,L]

RewriteCond %{HTTP_HOST} ^www.redeclipse.net$ [OR,NC]
RewriteCond %{HTTP_HOST} ^play.redeclipse.net$
RewriteRule ^(.*)$ https://redeclipse.net/$1 [R=301,L,NC]

RewriteRule ^/?$ /bits/index.php [QSA,L,NC]
RewriteRule ^/?home$ https://redeclipse.net/ [R=301,L,NC]
RewriteRule ^/?favicon.ico$ /bits/favicon.ico [L,NC]
RewriteRule ^/?(sitemap|sitemap.xml)$ /bits/sitemap.xml [L,NC]
RewriteRule ^/?appimage/(.+)/?(.+)?$ https://github.com/red-eclipse/deploy/releases/download/appimage_continuous_$1/$2 [R=302,L,NC]
RewriteRule ^/?wiki(/.*)?$ %{DOCUMENT_ROOT}/mediawiki/index.php [QSA,L,NC]
RewriteRule ^/?forum/(.+).php$ ${DOCUMENT_ROOT}/oldforum/$1.php [R=301,QSA,L,NC]

RewriteRule ^/?(appimage|tracker|issues|servers|stats|download|torrent)/?(.+)?$ /bits/index.php?target=$1&title=$2 [L,NC]
RewriteRule ^/?(git|google|facebook|youtube|itchio|gamejolt|devel|apply|patreon|donate|discuss|forum|forums|reddit)/?(.+)?$ /bits/index.php?target=$1&title=$2 [L,NC]
RewriteRule ^/?(chat|discuss|forum|forums|reddit|patreon|donate)/?(.+)?$ /bits/index.php?target=$1&title=$2 [L,NC]
RewriteRule ^/?(guidelines|faq|guide|install|contribute|trademark|license|readme)/?(.+)?$ /bits/index.php?target=$1&title=$2 [L,NC]
RewriteRule ^/?(svn|desura|indiedb)/?(.+)?$ /bits/index.php?target=$1&title=$2 [L,NC]
