Options -Indexes

php_value upload_max_filesize 32M
php_value post_max_size 32M

RewriteEngine on
RewriteCond %{HTTPS} !=on
RewriteRule ^/?(.*) https://redeclipse.net/$1 [R,L]

RewriteCond %{HTTP_HOST} ^www.redeclipse.net$ [OR,NC]
RewriteCond %{HTTP_HOST} ^play.redeclipse.net$
RewriteRule ^(.*)$ https://redeclipse.net/$1 [R=301,L,NC]

RewriteRule ^appimage/(.+)/(.+)$ https://github.com/red-eclipse/deploy/releases/download/appimage_continuous_$1/$2 [R=302,L,NC]

RewriteRule ^/?wiki(/.*)?$ %{DOCUMENT_ROOT}/mediawiki/index.php [QSA,L,NC]

RewriteRule ^home$ https://redeclipse.net/ [R=301,L,NC]

RewriteRule ^(appimage|download|torrent|tracker|issues|svn|git|google|youtube|stats|discuss)/(.+)$ /bits/index.php?target=$1&title=$2 [QSA,L,NC]
RewriteRule ^(appimage|tracker|issues|servers|stats|download|torrent|chat|svn|git|google|facebook|youtube|itchio|desura|indiedb|gamejolt|devel|guidelines|faq|guide|install|contribute|trademark|license|readme|apply|patreon|donate|discuss|forum|forums|oldforum)$ /bits/index.php?target=$1 [QSA,L,NC]
RewriteRule ^(sitemap|sitemap.xml)$ /bits/sitemap.xml [QSA,L,NC]
RewriteRule ^favicon.ico$ /bits/favicon.ico [QSA,L,NC]
RewriteRule ^$ /bits/index.php [QSA,L,NC]
